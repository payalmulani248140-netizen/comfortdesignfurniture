  document.addEventListener('DOMContentLoaded', function () {

    (function($){ 
      $.fn.simpleGallery = function(options){
        const $gallery = this;
        let images = $gallery.find('img.image-magnify-none').map((i, el) => $(el).attr('src')).get();
        let currentIndex = 0, scale = 1;

        // Modal HTML
        const modalHtml = `
          <div class="sg-modal-overlay" tabindex="-1">
            <div class="sg-modal-content" tabindex="0">
              <button class="sg-control sg-close" title="Close">&times;</button>
            
