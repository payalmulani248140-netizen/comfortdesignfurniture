      document.addEventListener('DOMContentLoaded', function () {
        const intervalId = setInterval(() => {
          const widget = document.querySelector('.widget-visible');
          if (widget) {
            widget.style.setProperty('z-index', '1', 'important'); // ← Add !important
            clearInterval(intervalId);
          }
        }, 300);

        setTimeout(() => clearInterval(intervalId), 5000);
      });
    </script>
    <script>
  document.addEventListener("DOMContentLoaded", function () {





      document.querySelectorAll('.thumb_media').forEach(img => {
        img.addEventListener('click', () => {
          const target = document.querySelector('.dimensions');
          if (target) {
            // Smooth scroll into view
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });

            // Trigger click after scroll delay only if aria-expanded != true
            setTimeout(() => {
              if (target.getAttribute('aria-expanded') !== 'true') {
                target.click();
              }
            }, 600); // adjust delay if needed
          }
        });
      });


      document.querySelectorAll('.chart-img').forEach(img => {
        img.addEventListener('click', () => {
          const target = document.querySelector('.dimensions');
          if (target) {
            // Smooth scroll into view
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });

            // Trigger click after scroll delay only if aria-expanded != true
            setTimeout(() => {
              if (target.getAttribute('aria-expanded') !== 'true') {
                target.click();
              }
            }, 600); // adjust delay if needed
          }
        });
      });




      document.addEventListener('mouseover', function (e) {
        if (!e.target.classList.contains('swatch')) return;

