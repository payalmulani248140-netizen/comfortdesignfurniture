              <div class="sg-modal-img-wrapper">
             
                <img class="sg-modal-img" draggable="false" />
              </div>
              </div>
            </div>
          </div>
        `;
        const $modal = $(modalHtml).appendTo('body');
        const $img = $modal.find('.sg-modal-img');
        const $wrapper = $modal.find('.sg-modal-img-wrapper');
        let dragging = false, lastX = 0, lastY = 0, scrollLeft = 0, scrollTop = 0;

        // Helper to apply correct zoom/size
        function setZoomStyles() {
          if (scale === 1) {
            $img.css({
              'transform': 'scale(1)',
              'max-width': '100%',
              'max-height': '100%'
            });
            $('.sg-zoom-in').show();
          } else {
            $img.css({
              'transform': `scale(${scale})`,
              'max-width': 'none',
              'max-height': 'none'
            });
          }
        }

        function showModal(idx){
          currentIndex = idx;
          scale = 1;
          $img.attr('src', images[idx]);
          setZoomStyles();
          $modal.addClass('active');
          $wrapper.scrollTop(0).scrollLeft(0);
          setTimeout(() => $modal.find('.sg-modal-content').focus(), 10);
        }
        function closeModal(){
          $modal.removeClass('active');
          dragging = false;
        }
        function updateImage(){
          $img.attr('src', images[currentIndex]);
          scale = 1;
          setZoomStyles();
          $wrapper.scrollTop(0).scrollLeft(0);
        }
        function zoomIn(){
          scale = Math.min(scale + 0.25, 5);
          $('.sg-zoom-out').hide();
          $('.sg-zoom-in').hide();
          setZoomStyles();
        }
        function zoomOut(){
          scale = Math.max(scale - 0.25, 1);
          setZoomStyles();
          if (scale === 1) {
            $wrapper.scrollTop(0).scrollLeft(0);
          }
        }
        function prevImg(){
          currentIndex = (currentIndex - 1 + images.length) % images.length;
          updateImage();
        }
        function nextImg(){
          currentIndex = (currentIndex + 1) % images.length;
          updateImage();
        }

        // Open modal on thumbnail click
         $('#openZoomBtn').on('click', function(e){
          
          const idx = images.indexOf($('.product__media-list .is-active img').attr('src'));
          showModal(idx);
        });

        const imageWrapper = document.querySelector('.sg-modal-img-wrapper-main');
        const plusIcon = imageWrapper.querySelector('.sg-zoom-in');


        imageWrapper.addEventListener('mousemove', (e) => {
          const rect = imageWrapper.getBoundingClientRect();
          
          // Calculate mouse position relative to imageWrapper top-left corner
          let x = e.clientX - rect.left;
          let y = e.clientY - rect.top;
          
          // Optional: constrain x and y so icon doesn't overflow outside image bounds
          const iconSize = 50; // size of plus icon in px
          x = Math.min(Math.max(iconSize / 2, x), rect.width - iconSize / 2);
          y = Math.min(Math.max(iconSize / 2, y), rect.height - iconSize / 2);
          
          // Move plus icon to mouse position
          plusIcon.style.left = `${x}px`;
          plusIcon.style.top = `${y}px`;
          plusIcon.style.transform = 'translate(-50%, -50%)'; // center icon on pointer
        });


        // Controls
        $modal.on('click', '.sg-close', closeModal);
        $modal.on('click', '.sg-zoom-in', zoomIn);
        $modal.on('click', '.sg-zoom-out', zoomOut);
        $modal.on('click', '.sg-prev', prevImg);
        $modal.on('click', '.sg-next', nextImg);

        // Keyboard navigation
        $modal.on('keydown', function(e){
          if (!$modal.hasClass('active')) return;
          if (e.key === "Escape") closeModal();
          else if (e.key === "ArrowLeft") prevImg();
          else if (e.key === "ArrowRight") nextImg();
          else if (e.key === "+" || e.key === "=") zoomIn();
          else if (e.key === "-" || e.key === "_") zoomOut();
        });

        // Click outside image to close
        $modal.on('click', function(e){
          if (e.target === this) closeModal();
        });

        // Drag to pan (now works in ALL directions after zoom)
        $img.on('mousedown', function(e){
          if (scale === 1) return;
          dragging = true;
          lastX = e.pageX;
          lastY = e.pageY;
          scrollLeft = $wrapper.scrollLeft();
          scrollTop = $wrapper.scrollTop();
          e.preventDefault();
          $img.css('cursor', 'grabbing');
        });
        $(document).on('mousemove', function(e){
          if (dragging){
            const dx = e.pageX - lastX;
            const dy = e.pageY - lastY;
            $wrapper.scrollLeft(scrollLeft - dx);
            $wrapper.scrollTop(scrollTop - dy);
          }
        }).on('mouseup', function(){
          if (dragging) {
            dragging = false;
            $img.css('cursor', 'grab');
          }
        });

        // Prevent unwanted image selection/dragging
        $img.on('dragstart', () => false);

        // Mousewheel to zoom
        $img.on('wheel', function(e){
          if (e.originalEvent.deltaY < 0) zoomIn();
          else zoomOut();
          return false;
        });

        return this;
      };

      // Auto-init on #gallery
      $(function() {
          $('.product__media-list').simpleGallery();
      });

