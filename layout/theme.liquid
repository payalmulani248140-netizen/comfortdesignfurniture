  <script>
(function () {
  const btn = document.getElementById('scrollRoundBtn');
  const circle = btn.querySelector('.progress-ring__circle');
  const radius = circle.r.baseVal.value;
  const circumference = 2 * Math.PI * radius;
  const body = document.body;

  // Setup circle stroke
  circle.style.strokeDasharray = `${circumference} ${circumference}`;
  circle.style.strokeDashoffset = circumference;

  function setProgress(percent) {
    percent = Math.min(Math.max(percent, 0), 100);
    const offset = circumference - (percent / 100) * circumference;
    circle.style.strokeDashoffset = offset;
  }

  // Update progress based on body scroll
  function updateOnScroll() {
    const scrollTop = body.scrollTop;
    const docHeight = body.scrollHeight - body.clientHeight;
    const pct = docHeight > 0 ? (scrollTop / docHeight) * 100 : 0;
    setProgress(pct);
  }

  // Smooth scroll-to-top
  function goToTopAndMove() {
    btn.classList.add('pressed');
    setTimeout(() => btn.classList.remove('pressed'), 220);

    btn.classList.add('to-top');

    // Smooth scroll using body
    if ('scrollBehavior' in document.documentElement.style) {
      body.scrollTo({ top: 0, behavior: 'smooth' });
    } else {
      // fallback
      let start = body.scrollTop;
      let step = start / 15;
      let t = setInterval(function () {
        start -= step;
        if (start <= 0) {
          body.scrollTo(0, 0);
          clearInterval(t);
        } else {
          body.scrollTo(0, Math.round(start));
        }
      }, 16);
    }
  }

  // Click action
  btn.addEventListener('click', function (e) {
    e.preventDefault();
    goToTopAndMove();
  });

  // Initial update
  updateOnScroll();

  // SCROLL LISTENER ON BODY (IMPORTANT)
  body.addEventListener('scroll', updateOnScroll, { passive: true });

  // Resize listener (may not be needed but safe)
  window.addEventListener('resize', updateOnScroll);

  // Scroll end detection
  let scrollTimer = null;
  body.addEventListener(
    'scroll',
    function () {
      if (scrollTimer) clearTimeout(scrollTimer);
      scrollTimer = setTimeout(function () {
        updateOnScroll();
        if (body.scrollTop === 0) {
          btn.classList.add('to-top');
        }
      }, 120);
    },
    { passive: true }
  );

})();
</script>

