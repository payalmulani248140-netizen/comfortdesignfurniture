
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<section class="luxury-grid-banner page-width section-{{ section.id }}-padding">
  <div class="luxury-grid">
    <!-- LEFT LARGE BANNER -->
    <div class="luxury-left">
      <div class="luxury-left-inner" style="background-image:url({{ section.settings.left_image | image_url }});">
        <div class="luxury-overlay"></div>
        <div class="luxury-content  dynamic-position-btn {{ section.settings.button_position }}">

          {%  if section.settings.badge != blank %}
          <span class="luxury-badge">{{ section.settings.badge }}</span>
          {% endif %}
          {% if section.settings.title != blank %}
              <h3>{{ section.settings.title }}</h3>
          {% endif %}
          {% if section.settings.subtitle != blank %}
            <p class="custom-paragraph">{{ section.settings.subtitle }}</p>
          {% endif %}
              {% if section.settings.button_link != blank %}
          <div class="luxury-custom-main-btn btn-{{ section.settings.button_type }}">
            {%  if section.settings.button_label != blank  %}
            <a href="{{ section.settings.button_link }}" class="luxury-btn">
              {{ section.settings.button_label }}
            </a>
          {% endif %}
          {%  if section.settings.button_svg %}
            <svg width="23" height="24" viewBox="0 0 23 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M11.5 0.875C17.834 0.875 23 6.04102 23 12.375C23 18.7539 17.834 23.875 11.5 23.875C5.12109 23.875 0 18.7539 0 12.375C0 6.04102 5.12109 0.875 11.5 0.875ZM18.2383 13.4082C18.5977 13.0488 18.6875 12.5996 18.6875 12.375C18.6875 12.1953 18.5977 11.7461 18.1934 11.3418L13.5664 6.71484C13.0273 6.13086 12.084 6.13086 11.5449 6.71484C10.9609 7.25391 10.9609 8.19727 11.5449 8.73633L13.7461 10.9375H5.75C4.94141 10.9375 4.3125 11.6113 4.3125 12.375C4.3125 13.1836 4.94141 13.8125 5.75 13.8125H13.7461L11.5898 16.0137C11.0059 16.5527 11.0059 17.4961 11.5898 18.0352C12.1289 18.6191 13.0723 18.6191 13.6113 18.0352L18.2383 13.4082Z" fill="#ff4b2b"></path>
          </svg>
            {%endif %}
          </div>
                        {% endif %}

        </div>

        <!-- Seamless marquee -->
        {% comment %} <div class="luxury-marquee">
          <div class="luxury-marquee-bg"></div>
          <div class="luxury-marquee-track">
            <div class="marquee-inner">
              {{ section.settings.marquee_text }}
              <span class="luxury-dot"></span> {{ section.settings.marquee_text }}
              <span class="luxury-dot"></span> {{ section.settings.marquee_text }}
              <span class="luxury-dot"></span> {{ section.settings.marquee_text }}
            </div>
            <div class="marquee-inner">
              {{ section.settings.marquee_text }}
              <span class="luxury-dot"></span> {{ section.settings.marquee_text }}
              <span class="luxury-dot"></span> {{ section.settings.marquee_text }}
              <span class="luxury-dot"></span> {{ section.settings.marquee_text }}
            </div>
          </div>
        </div> {% endcomment %}
      </div>
    </div>
    <!-- MIDDLE VIDEO WITH POSTER -->
    <div class="luxury-middle">
      <div class="video-wrapper">
        {% if section.settings.video_poster != blank %}
          {% comment %} <img src="{{ section.settings.video_poster | image_url }}" class="video-poster" alt="Video Poster"> {% endcomment %}
        {% endif %}
        {% if section.settings.video != blank %}
          {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
        {% endif %}
        {% comment %} <div class="gradient-overlay"></div> {% endcomment %}
        {% comment %} <div class="play-button" id="playButton">
          <svg width="72" height="72" viewBox="0 0 72 72" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M54.1081 65.9576C48.825 69.1579 42.6278 71 36 71C16.6702 71 1 55.3299 1 36C1 16.6701 16.6702 1 36 1C55.3299 1 71 16.6701 71 36C71 43.1879 68.7839 49.8696 65.0678 55.428M31.3472 48.9438L48.083 39.2325C50.56 37.7951 50.56 34.2048 48.083 32.7675L31.3472 23.0561C28.8686 21.6178 25.7692 23.4139 25.7692 26.2885V45.7113C25.7692 48.5859 28.8686 50.382 31.3472 48.9438Z" stroke="white" stroke-width="2" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div> {% endcomment %}
        <div class="luxury-video-caption">{{ section.settings.video_caption }}</div>
      </div>
    </div>
    <!-- MIDDLE BOTTOM IMAGE (UPDATED) -->
    <div class="luxury-middle-bottom">
      <div class="luxury-middle-bottom-inner">
          <a href="{{ section.settings.middle_bottom_link }}" class="luxury-middle-link">
        {% comment %} <div class="gradient-overlay"></div> {% endcomment %}
        <div
          class="bg-image"
          style="background-image:url({{ section.settings.middle_bottom_image | image_url }});"
        ></div>
        {% comment %} <div class="middle-bottom-content">
          {% if section.settings.middle_bottom_logo != blank %}
            <img src="{{ section.settings.middle_bottom_logo | image_url }}" alt="Logo" class="middle-bottom-logo">
          {% endif %}
          {% if section.settings.middle_bottom_title != blank %}
            <h4 class="middle-bottom-title">{{ section.settings.middle_bottom_title }}</h4>
          {% endif %}
          <div class="middle-sub-bottom-arrow">
            {% if section.settings.middle_bottom_arrow != blank %}
              <img src="{{ section.settings.middle_bottom_arrow | image_url }}" class="luxury-arrow-img" alt="Arrow">
            {% endif %}
          </div>
        </div> {% endcomment %}



<div class=" dynamic-position-btn {{ section.settings.button_position_middle }}">

          {% if section.settings.title1 != blank %}
              <h3>{{ section.settings.title1 }}</h3>
          {% endif %}

              {% if section.settings.middle_bottom_link != blank %}

          <a href="{{ section.settings.middle_bottom_link }}" class="luxury-small luxury-custom-main-btn btn-{{ section.settings.button_type }}">
           
              {% if section.settings.button_text_middle != blank %}
               <span>   {{ section.settings.button_text_middle }}  </span>
              {% endif %}
 {%  if section.settings.button_svg %}
           <svg width="23" height="24" viewBox="0 0 23 24" fill="none" xmlns="http://www.w3.org/2000/svg">
