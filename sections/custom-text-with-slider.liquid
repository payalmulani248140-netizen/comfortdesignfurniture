
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<section class="pick-style-section page-width section-{{ section.id }}-padding">
  <div class="pick-style-inner">
    <div class="pick-style-left">
      <h2 class="pick-style-heading">{{ section.settings.heading }}</h2>

      <div class="pick-style-tabs">
        <div class="mobile_version_tab"> 
        {% for block in section.blocks %}

        <div 
            class="pick-style-tab  {% if forloop.first %} active{% endif %}" 
            data-slide="{{ forloop.index0 }}"
          >
            <div class="pick-style-tab-number">{{ forloop.index }}</div>

            </div>
        {% endfor  %}
            </div>

        {% for block in section.blocks %}
          <div 
            class="pick-style-tab  {% if forloop.first %} active{% endif %}" 
            data-slide="{{ forloop.index0 }}"
          >
            <div class="pick-style-tab-number desktop_version">{{ forloop.index }}</div>
            <div class="pick-style-tab-content">
              <h4 class="pick-style-tab-title">{{ block.settings.tab_title }}</h4>
              <div class="pick-style-tab-text" {% unless forloop.first %}style="display:none"{% endunless %}>
                <p>{{ block.settings.tab_text }}</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="pick-style-right">
      <div class="pick-style-slider">
        {% for block in section.blocks %}
          <div class="pick-style-slide">
            <a href="{{ block.settings.tab_url }}">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | image_url: width: 900 }}" alt="{{ block.settings.tab_title }}">
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
            <div class="pick-style-slide-caption">
              <span>{{ forloop.index | prepend: '0' }}</span>
              <span class="caption-title">{{ block.settings.tab_title }}</span>
            </div>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const $slider = jQuery('.pick-style-slider');

  $slider.slick({
    slidesToShow: 1.5,
    slidesToScroll: 1,
    arrows: false,
    dots: false,
    infinite: false,
    centerMode: false,
    variableWidth: false,
    cssEase: 'ease',
    speed: 600,
    responsive: [
      {
        breakpoint: 768,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
    ]
  });

  let navigatingFromTabClick = false;

  jQuery('.pick-style-tab').on('click', function(e) {
    e.stopPropagation();
    const $parentTab = jQuery(this);
    const index = Number($parentTab.data('slide'));

    if ($parentTab.hasClass('active')) {
      $parentTab.removeClass('active');
      $parentTab.find('.pick-style-tab-text').stop(true, true).slideUp(300);
      return;
    }

    jQuery('.pick-style-tab').removeClass('active');
    jQuery('.pick-style-tab-text').stop(true, true).slideUp(300);

    $parentTab.addClass('active');
    $parentTab.find('.pick-style-tab-text').stop(true, true).slideDown(300);

    navigatingFromTabClick = true;
    $slider.slick('slickGoTo', index);
  });

  $slider.on('afterChange', function(event, slick, currentSlide) {
    const $currentTab = jQuery('.pick-style-tab[data-slide="' + currentSlide + '"]');
    if (navigatingFromTabClick) {
      jQuery('.pick-style-tab').removeClass('active');
      jQuery('.pick-style-tab-text').hide();
      $currentTab.addClass('active');
      $currentTab.find('.pick-style-tab-text').show();
      navigatingFromTabClick = false;
      return;
    }

    jQuery('.pick-style-tab').removeClass('active');
    jQuery('.pick-style-tab-text').stop(true, true).slideUp(300);
    $currentTab.addClass('active');
    $currentTab.find('.pick-style-tab-text').stop(true, true).slideDown(300);
  });
});
</script>
 

{% schema %}
{
  "name": "Custom Text Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Pick Your Own Style"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "style_tab",
      "name": "Style Tab",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab Title",
          "default": "Sofas"
        },
         {
          "type": "url",
          "id": "tab_url",
          "label": "Collection URL"
        },
        {
          "type": "textarea",
          "id": "tab_text",
          "label": "Tab Description",
          "default": "Add a short description for this style."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Text Slider",
      "blocks": [
        { "type": "style_tab" },
        { "type": "style_tab" },
        { "type": "style_tab" },
        { "type": "style_tab" }
      ]
    }
  ]
}
{% endschema %}
