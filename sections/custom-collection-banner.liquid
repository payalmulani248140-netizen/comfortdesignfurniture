{% stylesheet %}
.dynamic-gift-banner {
  position: relative;
  width: 100%;
  overflow: hidden;
  text-align: center;
  border-radius: var(--banner-radius);
  z-index: -1;
}

/* Background image container */
.dynamic-gift-banner .banner-bg {
  width: 100%;
  height: auto;
  padding: 20px 0; /* Height adjusts based on content */
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  position: relative;
  border-radius: 15px;
  /* min-height: 250px; */
  display: flex;
  align-items: center;
}

/* Center text */
.dynamic-gift-banner .banner-inner {
  width: 90%;
  margin: 0 auto;
  z-index: 3;
  position: relative;
}

.dynamic-gift-banner .banner-text {
  color: #fff;
  font-size: 28px;
  font-weight: normal;
  line-height: 1.3;
  text-shadow: 0 2px 5px rgba(0,0,0,0.5);
}
.banner-bg:after{
    border: 7px solid transparent;
    bottom: 0;
    box-shadow: inset 0 0 0 2px #fff;
    content: "";
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 2;
    border-width: 10px;
    border-radius: 25px;
}
/* Overlay */
.dynamic-gift-banner .overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.25);
  z-index: 1;
  pointer-events: none;
}

@media(max-width: 768px){
  .dynamic-gift-banner .banner-text{
    font-size: 20px;
  }
  .dynamic-gift-banner .banner-bg{
    padding: 60px 0;
    
  }
}
{% endstylesheet %}
{% if section.settings.banner_image != blank %}
<section 
  class="dynamic-gift-banner page-width"
  style="--banner-radius: {{ section.settings.banner_radius }}px;"
>

  <div 
    class="banner-bg"
    style="background-image: url('{{ section.settings.banner_image | image_url }}');"
  >

    {% if section.settings.enable_overlay %}
      <div class="overlay"></div>
    {% endif %}

    <div class="banner-inner">
      <h2 class="banner-text">{{ section.settings.banner_text }}</h2>
    </div>

  </div>

  {% if section.settings.banner_link != blank %}
    <a href="{{ section.settings.banner_link }}" 
       style="position:absolute;top:0;left:0;width:100%;height:100%;z-index:5;"></a>
  {% endif %}
</section>
{% endif %}
{% schema %}
{
  "name": "Dynamic Responsive Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "banner_text",
      "label": "Banner Text",
      "default": "Every Order Unlocks a Gift Worth Grabbing | Click Here for More Info"
    },
    {
      "type": "url",
      "id": "banner_link",
      "label": "Banner Link (optional)"
    },
    {
      "type": "range",
      "id": "banner_radius",
      "label": "Border Radius (px)",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1
    },
    {
      "type": "checkbox",
      "id": "enable_overlay",
      "label": "Enable Overlay",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Dynamic Responsive Banner"
    }
  ]
}
{% endschema %}
